@using Microsoft.AspNetCore.Components

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">
    <h2 class="text-center mb-4">Project Tracker Tabs</h2>

    <!-- Tab Control -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" id="select-tab1" data-bs-toggle="tab" href="#tab1" role="tab" aria-controls="new" aria-selected="true">Tab 1</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="select-tab2" data-bs-toggle="tab" href="#tab2" role="tab" aria-controls="edit" aria-selected="false">Tab 2</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="select-tab3" data-bs-toggle="tab" href="#tab3" role="tab" aria-controls="projects" aria-selected="false">Tab 3</a>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content mt-3">
        <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="new-tab">
            <h3>Tab 1</h3>
            

        </div>
        <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="edit-tab">
            <h3>Tab 2</h3>
   

        </div>
        <div class="tab-pane fade" id="tab3" role="tabpanel" aria-labelledby="projects-tab">
            <h3>Tab 3</h3>


        </div>
    </div>
</div>

